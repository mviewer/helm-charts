{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "kubernetes": {
        "fileMatch": ["^charts\\/mviewer\\/values\\.yaml$"]
    },
    "packageRules": [
        {
            "description": "Update mviewer/mviewer Docker image tag using GitHub tags",
            "matchManagers": ["helm-values"],
            "matchPackageNames": ["mviewer/mviewer"],
            "matchDatasources": ["github-tags"],
            "registryUrls": ["https://github.com/mviewer/mviewer"],
            "allowedVersions": "/^v\\d+\\.\\d+(?:\\.\\d+)?$/",
            "extractVersion": "^v(?<version>\\d+\\.\\d+(?:\\.\\d+)?)$"
        },
        {
            "description": "Disable updates for elasticsearch Docker image",
            "matchManagers": ["helm-values"],
            "matchPackageNames": ["elasticsearch"],
            "matchDatasources": ["docker"],
            "enabled": false
        }
    ]
}
